{
  extends: ["github>netlify/renovate-config:default", "schedule:daily"],
  ignorePresets: [":prHourlyLimit2"],
  semanticCommits: "enabled",
  dependencyDashboard: true,
  automerge: true,
  packageRules: [
    {
      // Don't upgrade to requiring ESM
      matchPackageNames: ["strip-ansi"],
      matchUpdateTypes: ["major"],
      enabled: false,
    },
  ],
}
